{
  "name": "capstone-notifications",
  "version": "1.0.0",
  "description": "lambda related to notifications for capstone project \"community-conenect\"",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "prepare": "node .husky/install.mjs",
    "clean": "rm -rf ./dist",
    "clean:all": "npm run clean && rm -rf node_modules",
    "build": "npm run clean && tsc -p . && tsc-alias",
    "package": "pnpm run build && zip -r dist/function.zip dist node_modules package.json",
    "prestart": "npm run build",
    "start": "node dist/src/index.js",
    "dev": "nodemon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manishsharma0398/capstone-notifications-lambda.git"
  },
  "author": "Manish Sharma",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/manishsharma0398/capstone-notifications-lambda/issues"
  },
  "homepage": "https://github.com/manishsharma0398/capstone-notifications-lambda#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "packageManager": "pnpm@10.16.0",
  "engines": {
    "node": ">=22.17.1"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.27.0",
    "@aws-sdk/client-secrets-manager": "3.899.0",
    "dotenv": "17.2.3",
    "nodemailer": "7.0.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/aws-lambda": "^8.10.152",
    "@types/node": "^24.5.2",
    "@types/nodemailer": "7.0.2",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "nodemon": "^3.1.10",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
